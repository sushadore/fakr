<!DOCTYPE html>
<html>
  <head>
    <title>Fakr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if current_user %>
        <%= current_user.email %> | <%= link_to "Sign out", destroy_user_session_path %>
      <% else %>
        <%= link_to "Sign up", new_user_session_path %> | <%= link_to "Sign in", new_user_registration_path %>
        <% end %>
      <%= flash[:alert] %>
      <%= flash[:notice] %>
      <%= yield %>

  </div>
  </body>
</html>
